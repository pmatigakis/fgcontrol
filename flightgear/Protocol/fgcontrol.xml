<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <generic>
    <output>
      <line_separator>newline</line_separator>
      <var_separator>tab</var_separator>
      
      <!-- GPS data -->
      <chunk>
        <node>/instrumentation/gps/indicated-altitude-ft</node>
        <name>GPS altitude</name>
        <type>float</type>
        <format>%05.8f</format>
      </chunk>

      <chunk>
        <node>/instrumentation/gps/indicated-ground-speed-kt</node>
        <name>GPS airspeed</name>
        <type>float</type>
        <format>%03.8f</format>
      </chunk>

      <chunk>
        <node>/instrumentation/gps/indicated-latitude-deg</node>
        <name>GPS latitude</name>
        <type>float</type>
        <format>%03.8f</format>
      </chunk>

      <chunk>
        <node>/instrumentation/gps/indicated-longitude-deg</node>
        <name>GPS longitude</name>
        <type>float</type>
        <format>%03.8f</format>
      </chunk>

      <chunk>
        <node>/instrumentation/gps/indicated-track-true-deg</node>
        <name>GPS heading</name>
        <type>float</type>
        <format>%03.7f</format>
      </chunk>

      <!-- Accelerometer data -->
      <chunk>
        <node>/accelerations/pilot/x-accel-fps_sec</node>
        <name>X acceleration</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <chunk>
        <node>/accelerations/pilot/y-accel-fps_sec</node>
        <name>Y acceleration</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <chunk>
        <node>/accelerations/pilot/z-accel-fps_sec</node>
        <name>Z acceleration</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <!-- Gyroscope data -->
      <chunk>
        <node>/orientation/roll-rate-degps</node>
        <name>Roll rate</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
      
      <chunk>
        <node>/orientation/yaw-rate-degps</node>
        <name>Yaw rate</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <chunk>
        <node>/orientation/pitch-rate-degps</node>
        <name>Pitch rate</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <!-- Magnetometer data -->
      <!-- TODO: Add this -->

      <!-- Atmospheric data -->
      <chunk>
        <node>/environment/pressure-inhg</node>
        <name>Pressure</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <chunk>
        <node>/systems/pitot/total-pressure-inhg</node>
        <name>Total pressure</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>

      <chunk>
        <node>/environment/temperature-degc</node>
        <name>Temperature</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
      
      <!-- Orientation -->
      <chunk>
        <node>/orientation/roll-deg</node>
        <name>Roll</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
 
      <chunk>
       	<node>/orientation/pitch-deg</node>
        <name>Pitch</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
      
      <!-- Instrumentation -->
      <chunk>
       	<node>/position/altitude-ft</node>
        <name>Altitude</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
      
      <chunk>
       	<node>/velocities/airspeed-kt</node>
        <name>Airspeed</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
      
      <chunk>
       	<node>/orientation/heading-deg</node>
        <name>Heading</name>
        <type>float</type>
        <format>%04.9f</format>
      </chunk>
      
      <!--  simulation -->
      <chunk>
           <name>Simulation time</name>
           <node>/fdm/jsbsim/simulation/sim-time-sec</node>
           <type>float</type>
           <format>%f</format>
       </chunk>
      
      <!-- flight controls -->
      <chunk>
           <name>Elevator</name>
           <node>/controls/flight/elevator</node>
           <type>float</type>
           <format>%f</format>
       </chunk>

       <chunk>
           <name>Aileron</name>
           <node>/controls/flight/aileron</node>
           <type>float</type>
           <format>%f</format>
       </chunk>

       <chunk>
           <name>Rudder</name>
           <node>/controls/flight/rudder</node>
           <type>float</type>
           <format>%f</format>
       </chunk>
       
       <chunk>
           <name>Throttle</name>
           <node>/controls/engines/engine/throttle</node>
           <type>float</type>
           <format>%f</format>
       </chunk>
    </output>
    
   	<input>
    	<line_separator>newline</line_separator>
       	<var_separator>tab</var_separator>

       	<chunk>
            <name>Elevator</name>
            <node>/controls/flight/elevator</node>
            <type>float</type>
            <format>%f</format>
        </chunk>

        <chunk>
            <name>Aileron</name>
            <node>/controls/flight/aileron</node>
            <type>float</type>
            <format>%f</format>
        </chunk>

        <chunk>
            <name>Rudder</name>
            <node>/controls/flight/rudder</node>
            <type>float</type>
            <format>%f</format>
        </chunk>
        
        <chunk>
            <name>Throttle</name>
            <node>/controls/engines/engine/throttle</node>
            <type>float</type>
            <format>%f</format>
        </chunk>
    </input>
  </generic>
</PropertyList>
